    "scripts": {
        "watch": "webpack --watch --display-modules --config ./config/webpack.config.js",
        "start": "atlas-package -DskipTests -Pwatch-mode && npm run dev-server ",
        "start:bitbucket": "atlas-run -DskipTests -DskipNpmInstall",
        "start:bitbucket-forever": "yes \"WTF?! The yes command is needed to run Bitbucket on Pipelines \" | atlas-run -DskipTests -DskipNpmInstall",
        "build": "atlas-package -DskipTests",
        "build:prod": "webpack --config ./config/webpack.config.js",
        "build:dev": "webpack --config ./config/webpack.config.js --mode=development",
        "dev-server": "webpack-dev-server --config ./config/webpack.config.js --mode=development --env=dev-server",
        "test:watch": "jest --config ./config/jest/jest.config.js --watch",
        "lint": "eslint './**/*.{js,jsx}'",
        "test": "jest --config ./config/jest/jest.config.js",
        "test:ci": "run-p start:bitbucket-forever test:integration:waiter",
        "test:integration:waiter": "npx wait-on http://localhost:7990/bitbucket -d 60000 -i 1000 && npm run test:integration:puppeteer",
        "test:integration:puppeteer": "node run-jest.js --config ./src/main/test/jest.config.js --runInBand"
    },
    "browserslist": [
        "last 1 version",
        "IE 11"
    ],
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 100
    }
